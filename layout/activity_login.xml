<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myrl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF"
    android:paddingBottom="50dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="50dp"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/title"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textSize="30dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/layoutlgn"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:background="@drawable/backgroundlayout"
        android:layout_width="wrap_content"
        android:layout_height="260dp">


    <EditText
        android:id="@+id/etUserName"
        android:layout_width="250dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="250dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etUserName"
        android:ems="10"
        android:hint="********"
        android:textColorHint="#ff000000"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        />
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="Remember me"/>

        <TextView
            android:id="@+id/forgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkbox"
            android:text="Forget password? "
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            />


    </RelativeLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutlgn"
        android:background="@drawable/background_buttons"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="30dp"
        android:autoText="true"
        android:text="Login"
        tools:autoText="true" />

    <Button
        android:id="@+id/btnreg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnLogin"
        android:background="@drawable/background_buttons"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnLogin"
        android:text="Register"
        />

    <Button
        android:id="@+id/btnhome"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnreg"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_buttons"
        android:text="Home" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_below="@id/btnhome"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="120dp"
        android:layout_x="65dp"
        android:layout_y="24dp"
        android:indeterminate="true"
        android:progressDrawable="@drawable/circle_progress_view"
        android:theme="@style/ProgressTheme" />

</RelativeLayout>